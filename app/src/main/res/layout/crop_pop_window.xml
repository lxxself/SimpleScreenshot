<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:gravity="center"

    android:layout_height="50dp">

    <HorizontalScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/btn_crop_free"
                android:background="@drawable/ic_action_crop_free"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@drawable/crop_button"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/btn_crop_original"
                android:background="@drawable/ic_action_crop_original"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@drawable/crop_button"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/btn_crop_square"
                android:background="@drawable/ic_action_crop_square"
                android:text="1:1"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@drawable/crop_button"
                android:layout_width="40dp"
                android:layout_height="40dp" />
           <TextView
               android:id="@+id/btn_crop_16_9"
               android:background="@drawable/ic_action_crop_16_9"
               android:text="16:9"
               android:textSize="12sp"
               android:gravity="center"
               android:textColor="@drawable/crop_button"
               android:layout_width="40dp"
               android:layout_height="40dp" />
            <TextView
                android:id="@+id/btn_crop_4_3"
               android:background="@drawable/ic_action_crop_landscape"
               android:text="4:3"
               android:textSize="12sp"
               android:gravity="center"
                android:textColor="@drawable/crop_button"
               android:layout_width="40dp"
               android:layout_height="40dp" />
            <TextView
                android:id="@+id/btn_crop_3_2"
                android:background="@drawable/ic_action_crop_3_2"
                android:text="3:2"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@drawable/crop_button"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/btn_crop_5_4"
                android:background="@drawable/ic_action_crop_5_4"
                android:text="5:4"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@drawable/crop_button"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

    </HorizontalScrollView>
        <ImageView
            android:background="#857d79"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/ibClickRotate"
            android:layout_gravity="center"
            android:background="@drawable/ic_action_rotate_left"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <ImageButton
            android:id="@+id/ibClickCancel"
            android:background="@drawable/ic_action_close"
            android:layout_width="40dp"
            android:layout_height="40dp" />

</LinearLayout>